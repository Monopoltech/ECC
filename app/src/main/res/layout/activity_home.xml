<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="loginproject.monopol.com.firebasecustomauth.HomeActivity"
    >


        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/profileButton"
            android:background="@drawable/profile"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/addButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/searchButton"
            android:background="@drawable/search"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/addButton"
            android:layout_toEndOf="@+id/addButton" />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/addButton"
            android:background="@drawable/add"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/profileButton"
            android:layout_toEndOf="@+id/profileButton" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileButton"
            android:id="@+id/hashList"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp">
        </ListView>


</RelativeLayout>
